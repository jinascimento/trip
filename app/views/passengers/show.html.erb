<%- model_class = Passenger -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @passenger.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birthdate) %>:</strong></dt>
  <dd><%= @passenger.birthdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:national_registry_code) %>:</strong></dt>
  <dd><%= @passenger.national_registry_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @passenger.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bus_id) %>:</strong></dt>
  <%= link_to bus_path(@passenger.bus.id) do %>
    <dd><%= @passenger.bus.name %></dd>
  <% end %>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              passengers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_passenger_path(@passenger), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              passenger_path(@passenger),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
