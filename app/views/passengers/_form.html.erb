<%= form_for @passenger, :html => { :class => "form-horizontal passenger" } do |f| %>

  <% if @passenger.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@passenger.errors.count, "error") %> prohibited this passenger from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @passenger.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :birthdate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :birthdate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:birthdate) %>
  </div>
  <div class="form-group">
    <%= f.label :national_registry_code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :national_registry_code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:national_registry_code) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :bus_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :bus_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:bus_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                passengers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
