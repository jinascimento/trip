<%- model_class = Passenger -%>
<div class="page-header">
  <h1>Passageiro</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @passenger.name %></dd>
  <dt><strong>Data de nascimento:</strong></dt>
  <dd><%= @passenger.birthdate.strftime("%d/%m/%Y") %></dd>
  <dt><strong>Documento:</strong></dt>
  <dd><%= @passenger.national_registry_code %></dd>
  <dt><strong>E-mail:</strong></dt>
  <dd><%= @passenger.email %></dd>
  <dt><strong>Ã”nibus:</strong></dt>
  <dd><%= @passenger.bus.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              event_bus_path(@passenger.bus.event, @passenger.bus), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_bus_passenger_path(@passenger.bus.event, @passenger.bus, @passenger), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_bus_passenger_path(@passenger.bus.event, @passenger.bus, @passenger),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
