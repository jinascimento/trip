<%- model_class = Bus -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bus.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:armchair) %>:</strong></dt>
  <dd><%= @bus.armchair %></dd>
  <dt><strong><%= model_class.human_attribute_name(:license_plate) %>:</strong></dt>
  <dd><%= @bus.license_plate %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              buses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bus_path(@bus), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bus_path(@bus),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
