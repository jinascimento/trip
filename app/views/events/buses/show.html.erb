<%- model_class = Bus -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @bus.name %></dd>
  <br>
  <dt><strong>Número de Poltronas:</strong></dt>
  <dd><%= @bus.armchair %></dd>
  <br>
  <dt><strong>Placa do veículo</strong></dt>
  <dd><%= @bus.license_plate %></dd>
  <br>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              event_path(@bus.event), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_bus_path(@bus.event, @bus), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_bus_path(@bus),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<br>
<br>
<br>
<button class="btn-sm btn btn-primary" type="button" data-toggle="collapse" data-target="#collapsePassenger" aria-expanded="false" aria-controls="collapsePassenger">
  Visualizar Passageiros
</button>
<br>

<%= render 'passengers' %>

