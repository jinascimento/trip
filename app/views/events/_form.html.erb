<%= form_for @event, :html => { :class => "form-horizontal passenger" } do |f| %>

  <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %> prohibited this passenger from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2', required: true %>
    <div class="col-lg-4">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= f.label :'Data', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.date_field :date, :class => 'form-control', required: true %>
    </div>

    <%=f.error_span(:name) %>
    <%=f.error_span(:date) %>
  </div>
  <br>
  <h2>Ônibus</h2>
  <%= f.fields_for :buses do |b| %>
    <div class="form-group">
      <%= b.label :nome, :class => 'control-label col-lg-2', required: true %>
      <div class="col-lg-4">
        <%= b.text_field :name, :class => 'form-control' %>
      </div>
      <%= b.label :'Número de Poltronas', :class => 'control-label col-lg-2' %>
      <div class="col-lg-2">
        <%= b.number_field :armchair, :class => 'form-control', required: true %>
      </div>
      <%= b.error_span(:armchair) %>
      <%= b.error_span(:name) %>
    </div>
    <div class="form-group">
      <%= b.label :license_plate, :class => 'control-label col-lg-2' %>
      <div class="col-lg-4">
        <%= b.text_field :license_plate, :class => 'form-control', required: true %>
      </div>
      <%= b.error_span(:license_plate) %>
    </div>
  <% end %>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
