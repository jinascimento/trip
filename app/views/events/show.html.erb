<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="card card-body">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @event.name %></dd>
    <br>
    <dt><strong><%= model_class.human_attribute_name(:birthdate) %>:</strong></dt>
    <dd><%= @event.date %></dd>
    <br>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                events_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_event_path(@event), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                event_path(@event),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
<br>
<br>
<% if @event.buses.present? %>
  <button class="btn-sm btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseBus" aria-expanded="false" aria-controls="collapseBus">
    Visualizar Ônibus
  </button>
  <br>

  <%= render 'buses' %>
<% else %>
  <%= link_to 'Adicionar ônibus', new_event_bus_path(@event), class: 'btn btn-primary' %>
<% end %>